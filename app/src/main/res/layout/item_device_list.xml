
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        android:id="@+id/cv_device"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:background="@drawable/device_img_bg"
            android:id="@+id/iv_device"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="--"
            android:singleLine="true"
            android:textSize="12dp"
            android:id="@+id/tv_device_status"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="right"
            android:background="@drawable/tag_bg" />

        <TextView
            android:id="@+id/tv_device_num"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:singleLine="true"
            android:layout_gravity="bottom"
            android:background="@drawable/device_no_bg"
            android:gravity="center"
            android:text="设备号：---"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:id="@+id/tv_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:singleLine="true"
            android:text="机床型号：GSK980TD" />
        <TextView
            android:layout_marginTop="40dp"
            android:textColor="@android:color/black"
            android:id="@+id/tv_device_status_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:singleLine="true"
            android:text="----" />

        <TextView
            android:textColor="@android:color/black"
            android:text="@string/device_rate_d"
            android:gravity="center_vertical|left"
            android:textSize="10sp"
            android:singleLine="true"
            android:id="@+id/tv_device_rate"
            android:layout_marginLeft="85dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>


