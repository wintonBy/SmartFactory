
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardElevation="@dimen/elevation"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_height="120dp">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cv_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/iv_device"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/device_img_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_device_status"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:elevation="@dimen/elevation"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="--"
            android:background="@drawable/tag_bg"
            android:textColor="@android:color/white"
            android:textSize="@dimen/body_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_device_num"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="@drawable/device_no_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="设备号：---"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_device"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tv_device_type"
            style="@style/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:text="型号：GSK980TD"
            app:layout_constraintStart_toEndOf="@+id/iv_device"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/tv_product_num"
            style="@style/content_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:text="----"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_device_type"
            app:layout_constraintStart_toEndOf="@+id/tv_device_type" />

        <TextView
            android:id="@+id/tv_device_rate_axis"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/device_rate_axis"
            android:textColor="@color/black70"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_device_type" />

        <TextView
            android:id="@+id/tv_device_rate_fast"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/device_rate_fast"
            android:textColor="@color/black70"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_device_rate_axis"
            app:layout_constraintStart_toEndOf="@+id/tv_device_rate_axis" />

        <TextView
            android:id="@+id/tv_device_rate_feed"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/device_rate_feed"
            android:textColor="@color/black70"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_device_rate_fast"
            app:layout_constraintStart_toEndOf="@+id/tv_device_rate_fast" />

        <TextView
            style="@style/content_title"
            android:textStyle="normal"
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="运行时长"
            app:layout_constraintStart_toStartOf="@+id/tv_device_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_device_type" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>




