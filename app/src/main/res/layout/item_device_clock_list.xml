<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:elevation="@dimen/elevation"
    android:background="@drawable/item_bg"
    >

    <TextView
        android:id="@+id/tv_work_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="历史均值："
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_work_title"
        app:layout_constraintStart_toEndOf="@+id/tv_work_title" />

    <TextView
        android:id="@+id/tv_work_title"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:text="加工信息"
        android:textColor="@color/black90"
        android:textSize="@dimen/subhead_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/process_head_bg"
        android:drawableLeft="@mipmap/ic_device"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:id="@+id/tv_work_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_work_title"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/black90"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintEnd_toStartOf="@+id/tv_work_avg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_work_title" />

    <TextView
        android:id="@+id/tv_work_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_work_title"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/black90"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_work_min"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_work_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_work_title"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/black90"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_work_avg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_work_avg" />

    <View
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_work_min"
        android:id="@+id/line"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TextView
        android:id="@+id/tv_run_title"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:text="运行信息"
        android:textColor="@color/black90"
        android:textSize="@dimen/subhead_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/tv_run_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="历史均值："
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_run_title"
        app:layout_constraintStart_toEndOf="@+id/tv_run_title" />

    <TextView
        android:id="@+id/tv_run_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/black90"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintEnd_toStartOf="@+id/tv_run_avg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_run_title" />

    <TextView
        android:id="@+id/tv_run_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/black90"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_run_min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_run_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/black90"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_run_avg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_run_avg" />

</android.support.constraint.ConstraintLayout>

