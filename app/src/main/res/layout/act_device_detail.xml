<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_actionbar"/>
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@android:color/white"
            app:contentPadding="10dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:layout_gravity="right"
                android:id="@+id/iv_device"
                android:background="@drawable/shape_device_id"
                android:gravity="center"
                android:text="1"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/black80"
                android:id="@+id/tv_device_no"
                android:gravity="center_vertical"
                android:text="设备编码：1"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:layout_gravity="bottom"
                android:layout_marginBottom="40dp"
                android:textColor="@color/black70"
                android:text="@string/type_f"
                android:id="@+id/tv_device_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_gravity="bottom"
                android:layout_marginBottom="30dp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:textColor="@color/black70"
                android:id="@+id/tv_device_status"
                android:text="状态：运行 2018-4-9 13:38:04"
                android:singleLine="true"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="@dimen/subhead_text_size"
            android:textColor="@color/black90"
            android:text="运行分析-今日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="@dimen/subhead_text_size"
            android:textColor="@color/black90"
            android:text="倍率变化-今日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="240dp">

        </com.github.mikephil.charting.charts.LineChart>
        <TextView
            android:textSize="@dimen/subhead_text_size"
            android:textColor="@color/black90"
            android:text="OEE分析 - 三日内"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <com.github.lzyzsd.circleprogress.ArcProgress
                app:arc_bottom_text="OEE"
                android:id="@+id/oee"
                style="@style/ArcOEEStyle"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <com.github.lzyzsd.circleprogress.ArcProgress
                app:arc_bottom_text="AE"
                android:id="@+id/ae"
                style="@style/ArcOEEStyle" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <com.github.lzyzsd.circleprogress.ArcProgress
                app:arc_bottom_text="PE"
                android:id="@+id/pe"
                style="@style/ArcOEEStyle" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <com.github.lzyzsd.circleprogress.ArcProgress
                app:arc_bottom_text="QE"
                android:id="@+id/qe"
                style="@style/ArcOEEStyle" />
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

