<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_actionbar" />

        <RelativeLayout
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            >
            <TextView
                android:id="@+id/tv_device_no"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="--"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_below="@+id/tv_device_no"
                android:id="@+id/iv_device"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/shape_device_id"
                android:gravity="center"
                android:text="1" />

            <LinearLayout
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:layout_toRightOf="@id/tv_device_no"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/tag_text_size"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="机床型号"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:gravity="right"
                        android:id="@+id/tv_device_type"
                        android:textSize="@dimen/tag_text_size"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/dash_line" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/tag_text_size"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="运行状态"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:gravity="right"
                        android:id="@+id/tv_device_status_value"
                        android:textSize="@dimen/tag_text_size"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="--"
                        android:textColor="@android:color/white" />
                </LinearLayout>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/dash_line" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/tag_text_size"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="持续时长"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:gravity="right"
                        android:textSize="@dimen/tag_text_size"
                        android:id="@+id/tv_status_time"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="--"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/dash_line" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="@dimen/tag_text_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="加工件数"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:gravity="right"
                        android:id="@+id/tv_device_process_num"
                        android:textSize="@dimen/tag_text_size"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="--"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/line_1"
                android:layout_below="@+id/iv_device"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dash_line" />
            <TextView
                android:layout_below="@id/line_1"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_device_status"
                android:textSize="@dimen/tag_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="状态：----"
                android:textColor="@android:color/white" />

        </RelativeLayout>
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            app:ci_drawable="@color/colorPrimary"
            app:ci_drawable_unselected="@color/black30"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
        <android.support.v4.view.ViewPager
            android:background="@android:color/white"
            android:id="@+id/vp_charts"
            android:layout_width="match_parent"
            android:layout_height="260dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

