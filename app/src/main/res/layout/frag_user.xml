<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 个人中心头部 -->
    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <FrameLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="150dp"
             />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation"
            android:layout_marginTop="110dp"
            android:background="@drawable/shape_head_circle"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default_head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/ic_company"
        android:id="@+id/tv_factory"
        style="@style/Setting_Item"
        android:text="@string/factory_info" />

    <TextView
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/ic_setting"
        android:id="@+id/tv_system"
        style="@style/Setting_Item"
        android:text="@string/system_setting" />
    <TextView
        android:layout_marginTop="20dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/ic_service"
        android:id="@+id/tv_service"
        style="@style/Setting_Item"
        android:text="@string/service_info" />
    <TextView
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/ic_about"
        android:id="@+id/tv_about"
        style="@style/Setting_Item"
        android:text="@string/about" />


</LinearLayout>