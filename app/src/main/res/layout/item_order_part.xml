<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:elevation="@dimen/elevation"
    android:background="@drawable/item_bg"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/tv_part_no"
        android:text="--"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <View
        android:layout_below="@+id/tv_part_no"
        android:background="@drawable/blue_dash_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginTop="2dp"
        android:text="--"
        android:textColor="@color/black80"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_part_no"
        android:id="@+id/tv_part_target"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <TextView
        android:layout_marginTop="2dp"
        android:text="--"
        android:textColor="@color/black80"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_part_no"
        android:id="@+id/tv_part_over"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <ProgressBar
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:max="100"
        android:min="0"
        android:progressDrawable="@drawable/progressbar_bg"
        android:id="@+id/pb_part"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_toLeftOf="@+id/tv_part_percent"
        android:layout_width="match_parent"
        android:layout_height="6dp" />
    <TextView
        android:gravity="center"
        android:textSize="@dimen/tag_text_size"
        android:text="当前进度:---"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tv_part_percent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="20dp" />
</RelativeLayout>